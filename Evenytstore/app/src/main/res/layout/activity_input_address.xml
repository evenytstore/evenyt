<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/lay">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:orientation="vertical">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="#FFF"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/toolbar"
        android:layout_marginBottom="14dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="10dp">

            <EditText
                android:background="@drawable/rounded_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombres*"
                android:inputType="textPersonName"
                android:layout_marginTop="20dp"
                android:id="@+id/textName"/>

            <EditText
                android:background="@drawable/rounded_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellidos*"
                android:inputType="textPersonName"
                android:layout_below="@+id/textName"
                android:layout_marginTop="20dp"
                android:id="@+id/textLastName"/>

            <EditText
                android:background="@drawable/rounded_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo*"
                android:inputType="textEmailAddress"
                android:layout_below="@+id/textLastName"
                android:layout_marginTop="20dp"
                android:id="@+id/textEmail" />

            <RelativeLayout
                android:background="@drawable/rounded_corner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lay4"
                android:layout_below="@+id/textEmail"
                android:layout_marginTop="20dp">
                <com.app.evenytstore.Utility.CustomDatePicker
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Fecha de Nacimiento*"
                    android:inputType="none"
                    android:id="@+id/textBirthday"
                    />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lay5"
                android:layout_below="@+id/lay4"
                android:layout_marginTop="20dp">
                <EditText
                    android:background="@drawable/rounded_corner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="DirecciÃ³n*"
                    android:layout_weight="3"
                    android:id="@+id/textAddress"/>
                <EditText
                    android:background="@drawable/rounded_corner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="# Dpto."
                    android:layout_weight="1"
                    android:id="@+id/textAddressNumber"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lay6"
                android:layout_below="@+id/lay5"
                android:layout_marginTop="20dp">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/citySpinner"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lay7"
                android:layout_below="@+id/lay6"
                android:layout_marginTop="20dp">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/districtSpinner"/>
            </LinearLayout>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lay7"
                android:text="Siguiente"
                android:id="@+id/button_next"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:background="?attr/colorPrimary"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true" />


        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
