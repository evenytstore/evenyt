<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius"
        android:layout_weight="0.50">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="75dp"
                android:layout_height="@dimen/album_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="5dp"
                android:maxLines="2"
                android:paddingTop="0dp"
                android:textColor="@color/album_title"
                android:textSize="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="left|center"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/thumbnail" />

            <TextView
                android:id="@+id/price"
                android:layout_width="@dimen/ic_album_price_width"
                android:layout_height="30dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:paddingBottom="@dimen/price_padding_bottom"
                android:paddingLeft="@dimen/album_price_padding"
                android:paddingRight="@dimen/album_price_padding"
                android:textColor="#000000"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_below="@+id/title"
                android:layout_marginTop="11dp"
                android:layout_alignParentEnd="true"
                android:layout_toEndOf="@+id/thumbnail" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/countRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:choiceMode="singleChoice"
                android:layout_below="@+id/thumbnail"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp" />

            <Button
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quitar producto"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:background="@drawable/red_button"
                android:layout_below="@+id/countRecyclerView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="14dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>