<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/card_margin"
        android:elevation="3dp"
        card_view:cardCornerRadius="@dimen/card_album_radius"
        android:layout_weight="0.50">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/thumbnail"
                android:layout_width="75dp"
                android:layout_height="@dimen/album_cover_height"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_below="@id/thumbnail"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="0dp"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/price"
                android:layout_width="@dimen/ic_album_price_width"
                android:layout_height="30dp"
                android:layout_below="@id/title"
                android:paddingBottom="@dimen/price_padding_bottom"
                android:paddingLeft="@dimen/album_price_padding"
                android:paddingRight="@dimen/album_price_padding"
                android:textSize="@dimen/price_size"
                android:gravity="left|center"
                android:textColor="#000000"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/countRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/price"
                card_view:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:choiceMode="singleChoice"/>

            <Button
                android:id="@+id/removeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/countRecyclerView"
                android:textSize="20dp"
                android:text="Remover"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>